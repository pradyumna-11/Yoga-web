<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css" />

    <style>
      /* Example CSS for positioning the login button */ { { !-- .login-button {
      position: fixed; top: 20px; right: 20px; background-color: #007bff; color:
      white; border: none; padding: 10px 20px; cursor: pointer; border-radius:
      5px; } -- } }
    </style>
  </head>

  <body>
    <div class="container">
      <h1 class="form-heading">Join the 10-Day Online Free Yoga Challenge</h1>
      <div>
        <img
          class="form-img"
          src="https://goodkarma-assets.s3.amazonaws.com/uploads/alwaysliveyoga/220/1686246404/TM.png"
        />
      </div>
      <form action="/register" method="POST" onsubmit="return validateForm()">
        <input type="text" name="name" placeholder="Enter Your Name" required />
        <input
          type="email"
          name="email"
          placeholder="Enter Your Email"
          required
        />
        <!-- Add email input -->

        <input
          type="tel"
          id="phone"
          name="phone"
          placeholder="+91XXXXXXXXXX"
          value="+91"
          required
          oninput="validatePhone()"
        />
        <input type="hidden" name="referrer" value="{{referrer}}" />
        <div class="home-submit-buttons-container">
          <button type="submit" style="margin: 5px;">Register Now for FREE</button>
          <!-- Login button -->
          <button
            class="login-button"
            onclick="location.href='/login'"
            style="margin: 5px;"
          >Login</button>
        </div>
        <div>
          <img
            class="form-img"
            src="https://static.wixstatic.com/media/ed475d_f5b199e43ee14b4aab9190321abbffd3~mv2.jpeg/v1/fill/w_720,h_1280,al_c,q_85,enc_auto/ed475d_f5b199e43ee14b4aab9190321abbffd3~mv2.jpeg"
          />
        </div>

      </form>

      <script>
        function validatePhone() { const phoneInput =
        document.getElementById('phone'); let phoneValue = phoneInput.value; //
        Ensure the value starts with +91 if (!phoneValue.startsWith('+91')) {
        phoneInput.value = '+91'; phoneValue = '+91'; } // Remove any
        non-numeric characters except the prefix phoneValue =
        phoneValue.replace(/[^0-9\+]/g, ''); if (!phoneValue.startsWith('+91'))
        { phoneValue = '+91'; } // Limit to 12 characters including +91 if
        (phoneValue.length > 13) { phoneValue = phoneValue.slice(0, 13); }
        phoneInput.value = phoneValue; } function validateForm() { const
        phoneInput = document.getElementById('phone').value; const numericPart =
        phoneInput.slice(3); // Exclude +91 prefix if (numericPart.length !== 10
        || isNaN(numericPart)) { alert('WhatsApp number must be exactly 10
        digits long and contain only numbers after +91.'); return false; } //
        Validate email format const emailInput =
        document.getElementsByName('email')[0].value; if
        (!isValidEmail(emailInput)) { alert('Please enter a valid email
        address.'); return false; } return true; } function isValidEmail(email)
        { // Basic email validation using a regular expression // This is a
        simple validation, you might want to use a more robust validation in
        production const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; return
        emailRegex.test(email); }
      </script>
    </div>
  </body>

</html>